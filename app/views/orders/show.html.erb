<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %>
    </h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <h4>Total Charge : <%= humanized_money_with_symbol @order.total_cents / 100.0 %> </h4>
  <h4>Email used : <%= @order.email %> </h4>
</div>

<div class="panel panel-default products">
  <table class="table table-bordered"
    <thead>
      <tr>
        <th>Product(s)</th>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
      </tr>
    </thead>
    <tbody>
      <%= render 'line_item' %>
    </tbody>
  </table>

  
  </section>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
