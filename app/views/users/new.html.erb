<h1>Register</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_for :user, url: '/users' do |f| %>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <%= f.submit "Submit" %>

    <% end %>
  </div>
</div>